{                                                                      
  "name": "signature-api",                                                 
  "description": "API platform for signing documents.",
  "keywords": [                                                        
    "API",                                                             
    "convert",                                                         
    "PDF",                                                             
    "PNG",                                                             
    "signature",
    "signing",
    "documents"                                                            
  ],                                                                   
  "website": "https://github.com/motdotla/signature-api",                  
  "repository": "https://github.com/motdotla/signature-api",               
  "logo": "https://raw.githubusercontent.com/motdotla/signature-api/master/signature-api.jpg",
  "env": {
    "BUILDPACK_URL": "https://github.com/kr/heroku-buildpack-go.git",
    "CARVE_ROOT": {
      "description": "The root API url of the Carve API server",
      "value": "https://carve-api.herokuapp.com",
      "required": true
    },
    "SIGNATURE_CATCHER_ROOT": {
      "description": "The root API url of the signature-catcher webhook server",
      "value": "https://signature-catcher.herokuapp.com",
      "required": true
    },
    "SIGNATURE_SHARE_ROOT": {
      "description": "The root url of the signature-share service",
      "value": "https://signature-share.herokuapp.com",
      "required": true
    },
    "SIGNATURE_API_ROOT": {
      "description": "The root url of the signature-api service. This should be the same url you are setting this up on. For example, https://signature-api.herokuapp.com",
      "value": "https://signature-api.herokuapp.com",
      "required": true
    },
    "ORCHESTRATE_API_KEY": {                                               
      "description": "Get your orchestrate api key at http://orchestrate.io",          
      "required": true
    }
  } 
} 
